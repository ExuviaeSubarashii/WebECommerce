<style>
    .userPanel {
        position: fixed;
        top: 10px;
        right: 10px;
        z-index: 9999;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropbtn {
        background-color: #f1f1f1;
        color: #333;
        padding: 10px;
        border: none;
        cursor: pointer;
        font-weight: bold;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #fff;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
        top: 100%;
        right: 0;
    }

        .dropdown-content p {
            color: #333;
            padding: 10px;
            text-decoration: none;
            display: block;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .dropdown-content p:hover {
                background-color: #f1f1f1;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }
    .itemsDiv{
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
    }

    .cartListDiv {
        display: none; /* Start with the div hidden */
        width: 200px; /* Adjust the width as needed */
        background-color: black; /* Set a background color for the sidebar */
        position: fixed; /* Position the sidebar */
        top: 0;
        left: 0; /* Initially hidden off-screen */
        height: 100vh; /* Set the height to fill the viewport */
        transition: left 0.3s; /* Add a smooth transition effect */
        color:wheat;
    }
    .itemDiv{
        width:150px;
        text-align: center;
        padding: 20px;
        background-color: #081b29;
        overflow: auto;
        display: flex;
        flex-direction: column-reverse;
        max-width: 100%;
        border-radius: 30px 5px;
        border-color: black;
        border-style: solid;
        left: 50px;
        color:white;
    }

    .buyoutButtons{

        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-align: center;
        padding: 10px;
        background-color: #3498db;
        color: #fff;
        border: none;
        border-radius: 5px;
    }

    :root {
        --primary-bg-color: #ffffff; /* Light mode background color */
        --primary-text-color: #333333; /* Light mode text color */
        --secondary-bg-color: #f0f0f0; /* Light mode secondary background color */
        /* Add more CSS variables for other colors as needed */
    }

    /* Dark mode CSS */
    body.dark-mode {
        --primary-bg-color: #1a1a1a; /* Dark mode background color */
        --primary-text-color: #ffffff; /* Dark mode text color */
        --secondary-bg-color: #333333; /* Dark mode secondary background color */
        /* Add more CSS variables for other colors as needed */
    }

    /* Apply CSS variables to elements */
    body {
        background-color: var(--primary-bg-color);
        color: var(--primary-text-color);
    }
</style>

<body>
    <div class="userPanel">
        <div class="dropdown">
            <button id="userNameTag" class="dropbtn">UserName</button>
            <div class="dropdown-content">
                <p id="userNotif" class="userNotif">Account Details</p>
                <p id="myOrders" class="myOrders" onclick="GoToMyOrder()">My Orders</p>
                <button id="toggleDarkMode">Toggle Dark Mode</button>
                <p id="userAccount" class="userAccount" onclick="LogOut()">Logout</p>
            </div>
        </div>
    </div>
<div class="itemsDiv" id="itemsDiv">
    
</div>
<div class="cartListDiv" id="cartListDiv">

</div>
<button id="showButton" class="buyoutButtons" onclick="loadCartListIntoCartListDiv()">
    Show CartList
</button>
<button id="clearcartlistbutton" class="buyoutButtons" onclick="ClearCartList()">
    Clear CartList
</button>
<button class="buyoutButtons" style="color:black;background-color:yellow" id="sendOrderButton" onclick="SendOrder()">
    Order
</button>
</body>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            GetAllItems();
            
            const toggleDarkModeButton = document.getElementById('toggleDarkMode');
            const prefersDarkMode = JSON.parse(localStorage.getItem('darkModePreference'));

            if (prefersDarkMode) {
                document.body.classList.add('dark-mode');
            }

            toggleDarkModeButton.addEventListener('click', function () {
                document.body.classList.toggle('dark-mode');
                const isDarkMode = document.body.classList.contains('dark-mode');
                localStorage.setItem('darkModePreference', JSON.stringify(isDarkMode));
            });
        });
        const showButton = document.getElementById('showButton');
        const cartListDiv = document.getElementById('cartListDiv');

        showButton.addEventListener('click', function () {
            if (cartListDiv.style.display === 'none') {
                cartListDiv.style.display = 'block'; // Show the div
            } else {
                cartListDiv.style.display = 'none'; // Hide the div
                cartListDiv.innerHTML = ''; // Empty the div
            }
        });
       
    </script>
}



