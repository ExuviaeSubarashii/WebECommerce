<style>
    /* Reset some default styles to ensure consistency across browsers */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Basic styling for the body */
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        background-color: #f9f9f9;
    }

    /* Styling for the newItemPanel */
    .newItemPanel {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        margin: 30px auto;
    }

        .newItemPanel input,
        .newItemPanel button {
            display: block;
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .newItemPanel button {
            background-color: #4CAF50;
            color: #fff;
            cursor: pointer;
        }

            .newItemPanel button:hover {
                background-color: #45a049;
            }

    /* Styling for the myitemlist */
    .myitemlist {
        max-width: 600px;
        margin: 0 auto;
    }

        .myitemlist .item {
            background-color: #fff;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .myitemlist .item p {
                margin-bottom: 5px;
            }

            .myitemlist .item img {
                max-width: 100px;
            }

</style>
<body>
    <div class="newItemPanel">

        <input class="itemName" id="itemName" />
        <input class="itemPrice" id="itemPrice"/>
        <input class="itemStock" id="itemStock" />
        <input type="file" class="imageInput" id="imageInput"/>
        <button type="submit" class="sendItems" id="sendItems" onclick="AddNewItem()"></button>
    </div>

    <div class="myitemlist" id="myitemlist">

    </div>
</body>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded',function(){
            GetMyListings();
        });
    </script>
}